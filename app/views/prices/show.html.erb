<%- model_class = Price -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fuel_type) %>:</strong></dt>
  <dd><%= @price.fuel_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @price.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:station_id) %>:</strong></dt>
  <dd><%= @price.station_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              prices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_price_path(@price), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              price_path(@price),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
